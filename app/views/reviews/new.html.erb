<div class="container">
  <%= simple_form_for [@restaurant, @review], url: restaurant_reviews_path, method: :post do |f| %>
    <% if @review.errors.any? %>
      <div class="errors-container">
        <ul>
          <% @review.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.input :content %>
    <%= f.input :rating, collection: [1, 2, 3, 4, 5] %>
    <%= f.submit "Add review", class: "btn btn-primary" %>
  <% end %>
</div>

